<% if @users.exists? %>
  <% @users.each do |user| %>
    <table> 
      <tbody>
        <tr>
          <td><%= user.name %></td>
          <td>Followed: <%= user.following.count %></td>
          <td>Followers: <%= user.followers.count %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>There aren't any user.</p>
<% end %> 