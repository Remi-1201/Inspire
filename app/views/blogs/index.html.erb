<p id="notice"><%= notice %><br>
<h1>Blogs</h1>
<%= button_to 'Make new Post', new_blog_path, method: :get %><br>

<select id="voice-select"></select><br><br>    

<div class = "table_frame">
  <table>
    <% if @blogs.present? %>
      <% @blogs.each do |blog| %>
    <tbody>
        <tr>
          <th colspan="3" class="th_category">
              <% blog.categories.each do |category| %>
                <%= category.name %>
            <% end %>
          </th>
        </tr>

        <tr>
          <td>
            <%= image_tag (blog.user.avatar.url), class: "avatar-index rounded-circle mx-auto"  if blog.user.avatar && blog.user.avatar.url %>
          </td>
            <td>
              <%= blog.user.name %>
            </td>
            <td>
              <%= blog.created_at.to_s(:datetime) %>
            </td>            
        </tr>

        <tr>
          <th colspan="3" class="th_title">
              <%= blog.title %>
          <th>
        </tr>

        <tr>
          <th colspan="3" class="th_detail">
              <textarea id="detail">
                <%= blog.detail %>
              </textarea>
          <th>
        </tr>

        <tr>
            <td><button id="speak-btn">speak</button></td>            
            <td><button id="stop-btn">stop</button></td>
            <td></td>
        </tr>

        <tr>
          <th colspan="3" class="th">
              <%= image_tag(blog.image.url) if blog.image && blog.image.url %>
          </th>
        <tr>

        <tr>
            <td><%= link_to 'Show', blog %></td>
            <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
            <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
            <% end %>
      </tbody>
    </table>
  </div>    

    <% else %>
      <%= "Your search didn't match any results" %>        
    <% end %>    


