<p id="notice"><%= notice %><br>
<%= button_to 'Categories', categories_path, method: :get %><br>

<h1>Blogs</h1>
<div class="col-md-6"><%= button_to 'Make new Post', new_blog_path, method: :get %></div><br>

  <select id="voice-select"></select><br>

<table>
  <thead>
    <tr>
      <th>All posts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= form_with url: blogs_path, method: :get, local: true do |form| %>
    <%= form.select("category_id", Category.pluck(:name, :id), { include_blank: true }) %>
    <%= form.submit 'Sort by categories', name: nil %>
  <% end %> </div><br><br>

<br>
  <div class="search_form">
    <%= form_with(url: search_blogs_path, method: :get, local: true) do %>      
      <%= text_field_tag :search_detail %>
      <%= submit_tag 'Search' %>
      <% end %>

  </div><br>
  <tbody class ="table">
<% if @blogs.present? %>
    <% @blogs.each do |blog| %>
      <tr>
        <td><% blog.categories.each do |category| %>
            <%= category.name %>
            <% end %></td>
        <td><%= image_tag (blog.user.avatar.url), class: "avatar-index rounded-circle mx-auto"  if blog.user.avatar && blog.user.avatar.url %></td>         
        <td><%= blog.title %></td>
        <td><textarea id = "detail"><%= blog.detail %></textarea></td>
        <td><button id="speak-btn">speak</button></td>
        <td><button id="stop-btn">stop</button></td>
        <td><%= image_tag(blog.image.url) if blog.image && blog.image.url %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>        
      <% end %>
      <% else %>
        <%= "Your search didn't match any results" %>        
    <% end %>    
  </tbody>
</table>

