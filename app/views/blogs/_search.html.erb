<div class ="search">
  <%= search_form_for @search_blog, as: :blog_q, class:'search', url: search_blogs_path do |f| %>    
    <%= f.select :categories_id_eq, options_from_collection_for_select(Category.all, "id", "name"), size:"10x1", prompt: 'Category', include_blank: true, class:"search_form" %>  
    <%= f.search_field :detail_or_title_cont, size:"20x1", placeholder: "Keywords", class:"search_form" %>  
    <%= f.submit 'Search', class: "search-btn"  %>
  <% end %>
</div>