<br>
<h2>Update <%= @user.name %>'s Profile</h2> 

<div class="alert alert-light" role="alert">
  <div id="notice02"><%= notice %></div>
</div>

<p><%= link_to "Back to my profile", mypage_path , class:'btn btn-light' %> &nbsp;
<%= link_to "My favorites", favorites_path , class:'btn btn-light' %></p> 

<p id="notice"><%= notice %>

<div class = "profile_edit">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, placeholder: " Your username" %>
    </div><br>

    <div class="field">
      <%= f.label :email %><br> 
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " Email address"  %>
    </div><br>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i><br>(leave blank if you don't want to change it)</i> <br>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: " At least 6 characters"  %><br>
    </div><br>

    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " At least 6 characters"  %>
    </div><br>

    <div class="field">
      <%= f.label :current_password %><br> <i>(we need your current password to confirm your changes)</i><br>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: " Your current password"  %>
    </div><br>

    <div class="field">
      <%= f.label :avatar %><br>
      <%= f.file_field :avatar %><br>
      <%= f.hidden_field :avatar_cache %><br>

      <%= image_tag(@user.avatar.url) if @user.avatar && @user.avatar.url%>
    </div><br>

    <div class="actions">
      <%= f.submit "Update", class:'new_blog' %>
    </div>
  <% end %><br><br>

  <h3>Cancel my account</h3><br>

  <p>Unhappy? <br><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:'btn btn-outline-danger'%></p>

  <%= link_to "Back", :back , class:'btn btn-light'%>

 </div>