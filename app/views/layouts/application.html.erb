      </ul>
    </div>

    <div class="menu-center">
      <div id="Control">
        <div id="RecMime">
        </div>
      </div>     
    <div id ="visible">
      <div id ="player" onclick="showbox()">
        <span class="material-icons" id="visibility">visibility</span>
      </div>
      <div id ="player" onclick="hidebox()">
        <span class="material-icons" id="visibility_off">visibility_off</span>
      </div>
    </div>
      <ul class="foot-center">
      </ul>
    </div>

    <div class="menu-right">         
        <a class="btn" href="<%= new_blog_path %>">
          <span class="material-icons" id="new_footer">post_add</span>
        </a>        
          <ul class="foot-right">
          </ul>        
      </div>
    </div>
    
    <div class="sub_context03">
      @Remi since 2022
