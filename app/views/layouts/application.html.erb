                      <li>
                        <%= link_to "Update profile", edit_user_registration_path, class: "link" %>
                      </li>
                    </ul>
                </li>
                <li class="right">
                  <%= link_to "Home Page", blogs_path, class: "link" %>
                </li>
                <li class="right">
                  <%= link_to "Guidance", oauth_guidance_path, class: "link" %>
                </li>
                <li class="right">
                  <%= link_to "Logout", destroy_user_session_path, class: "link" %>
                </li>
              <% else %>
                <li class="right">
                  <%= link_to "Home Page", blogs_path, class: "link" %>
                </li>                  
                <li class="dir">
                  <div class = "to_left01">
                    <span class="material-icons" id="navigate_before">arrow_left</span> Languages
                  </div>
                    <ul>
                      <li>
                        <%= link_to "English", categories_english_path, class: "link" %>
                      </li>
                      <li>
                        <%= link_to "Japanese", categories_japanese_path, class: "link" %>
                      </li>
                    </ul>
                </li>
                
                <li class="dir">
                  <div class = "to_left">
                    <span class="material-icons" 
                    id="navigate_before">arrow_left</span> 
                    <%= link_to "Profile", mypage_path, method: :get, class: "link" %>
                  </div>                    
                    <ul>
                      <li>
                        <%= link_to "My favorites", favorites_path, class: "link" %>
                      </li>
                      <li>
                        <%= link_to "Update profile", edit_user_registration_path, class: "link" %>
                      </li>
                    </ul>
                </li>
                <li class="right">
                  <%= link_to "Guidance", oauth_guidance_path, class: "link" %>
                </li>
                <li class="right">
                  <%= link_to "Logout", destroy_user_session_path, class: "link" %>
                </li>              
              <% end %>
              <% else %>              
                <li class="right">                
                  <%= link_to "Home Page", blogs_path, class: "link" %>
                </li>
                <li class="dir">
                  <div class = "to_left01">
                    <span class="material-icons" id="navigate_before">arrow_left</span> Languages
                  </div>
                    <ul>
                      <li>
                        <%= link_to "English", categories_english_path, class: "link" %>
                      </li>
                      <li>
                        <%= link_to "Japanese", categories_japanese_path, class: "link" %>
                      </li>
                    </ul>
                </li>
                <li class="right">              
                  <%= link_to "Sign up", new_user_registration_path, class: "link" %>
                </li>                  
                <li class="right">
                  <%= link_to "Login", new_user_session_path	, class: "link" %>
                </li>              
                <li class="right">                        
                  <%= link_to "Login by Google", user_google_omniauth_authorize_path, method: :post, class: "link" %>
                </li>
                <li class="right">
                  <%= link_to "Guidance", oauth_guidance_path, class: "link" %>
                </li>
              <% end %>            
            </ul>
          </li>
        </div>

      </ul>
    </nav>
  </div>

  <header class = "header">
    <div class="sub_context">
    Learning & sharing with
    </div>

    <div class="context">
      <p class="logo">Inspire</p>
    </div>

    <div class="sub_context02">
    by many inspiring quotes
    </div>  

    <div class="area" >
      <ul class="circles">
        <li></li> <li></li> <li></li> <li></li> <li></li>
        <li></li> <li></li> <li></li> <li></li> <li></li>
